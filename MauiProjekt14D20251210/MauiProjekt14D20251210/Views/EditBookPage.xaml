<?xml version="1.0" encoding="utf-8" ?>
<ContentPage xmlns="http://schemas.microsoft.com/dotnet/2021/maui"
             xmlns:x="http://schemas.microsoft.com/winfx/2009/xaml"
             x:Class="MauiProjekt14D20251210.Views.EditBookPage"
             Title="Könyv szerkesztése">
    <VerticalStackLayout Padding="20">

        <Entry Placeholder="Cím" Text="{Binding Book.Title}" />
        <Entry Placeholder="Szerző" Text="{Binding Book.Author}" />
        <Entry Placeholder="Év" Text="{Binding Book.Year}" />

        <Button Text="Mentés" Command="{Binding UpdateCommand}" />

        <Button Text="Törlés"
                TextColor="Red"
                Command="{Binding DeleteCommand}" />
    </VerticalStackLayout>
</ContentPage>