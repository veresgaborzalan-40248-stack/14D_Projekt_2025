<?xml version="1.0" encoding="utf-8" ?>
<ContentPage xmlns="http://schemas.microsoft.com/dotnet/2021/maui"
             xmlns:x="http://schemas.microsoft.com/winfx/2009/xaml"
             x:Class="MauiProjekt14D20251210.Views.AddBookPage"
             Title="Új könyv">

    <StackLayout Padding="10" Spacing="10">
        <Entry Placeholder="Cím" Text="{Binding Title}" />
        <Entry Placeholder="Szerző" Text="{Binding Author}" />
        <Button Text="Mentés" Command="{Binding SaveCommand}" BackgroundColor="DarkGreen" TextColor="White"/>
    </StackLayout>
</ContentPage>